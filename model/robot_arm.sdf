<?xml version="1.0" ?>
<sdf version="1.7">
    <world name="arm_world">
        <plugin filename="ignition-gazebo-physics-system" name="ignition::gazebo::systems::Physics"/>
        <plugin filename="ignition-gazebo-user-commands-system" name="ignition::gazebo::systems::UserCommands"/>
        <plugin filename="ignition-gazebo-scene-broadcaster-system" name="ignition::gazebo::systems::SceneBroadcaster"/>
        <include><uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Sun</uri></include>
        <include><uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Ground Plane</uri></include>

        <model name="simple_arm">
            <pose>0 0 0 0 0 0</pose>
            <static>false</static>

            <!-- Publish joint states to Ignition topic -->
            <plugin filename="ignition-gazebo-joint-state-publisher-system"
                    name="ignition::gazebo::systems::JointStatePublisher">
            </plugin>
            
            <link name="base_link">
                <pose>0 0 0.5 0 0 0</pose> <collision name="base_collision">
                    <geometry><box><size>0.2 0.2 1.0</size></box></geometry>
                </collision>
                <visual name="base_visual">
                    <geometry><box><size>0.2 0.2 1.0</size></box></geometry>
                    <material><ambient>0.2 0.2 0.2 1</ambient></material>
                </visual>
            </link>
            
            <link name="arm_link">
                <pose>0 0.5 0.9 0 0 0</pose> <inertial> <mass>1.0</mass>
                    <inertia><ixx>0.1</ixx><iyy>0.1</iyy><izz>0.1</izz></inertia>
                </inertial>
                <collision name="arm_collision">
                    <geometry><box><size>0.1 0.8 0.1</size></box></geometry>
                </collision>
                <visual name="arm_visual">
                    <geometry><box><size>0.1 0.8 0.1</size></box></geometry>
                    <material><ambient>1 0 0 1</ambient></material> </visual>
            </link>

            <joint name="shoulder_joint" type="revolute">
                <parent>base_link</parent>
                <child>arm_link</child>
                <axis>
                    <xyz>0 0 1</xyz> <limit><lower>-1.57</lower><upper>1.57</upper></limit>
                </axis>
            </joint>
        </model>
    </world>
</sdf>